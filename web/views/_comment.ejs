<main class="container m-2">
  <div class="comment-container">
    <%if(locals.user){%>
    <form action="/comments/create" method="POST">
      <input type="text" name="content" placeholder="comment..." required />
      <input type="hidden" name="post" value="<%= post._id %>" />
      <button type="submit">Comment</button>
    </form>
    <%}%>
  </div>
  <div id="showing-comments">
    <%for(comment of post.comments){%> <% if(locals.user && locals.user.id ==
    comment.user.id){%>
    <a href="/comments/destroy/<%= comment.id %>" style="color: red">X</a>
    <%}%>
    <h3><%= comment.content %></h3>
    <p>By <% if(comment.user) {%><%= comment.user.name %></p>
    <%}%> <%}%>
  </div>
</main>
